{
  "compilerOptions": {
    "jsx": "react-jsx",
    "baseUrl": "./", 
    "paths": {
      "@types/*": ["types/*"]
    },
    "types": ["vite/client", "node"],
    "outDir": "./dist", 
    "moduleResolution": "node",
    "target": "es6",
    "module": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "types/*", "vite.config.ts"]
}